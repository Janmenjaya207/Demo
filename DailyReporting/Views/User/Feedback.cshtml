            <div class="panel-container show" role="content">
                <div class="loader"><i class="fal fa-spinner-third fa-spin-4x fs-xxl"></i></div>
                <div class="row mb-3">

                    <div class="col-md-12">
                        <form action="/User/Feedback" method="post" id="myform">

                            <div class="panel-content">
                                <div class="frame-wrap">
                                    @{string confirmMessage = Convert.ToString(TempData["Message"]); string warningMessage = Convert.ToString(TempData["WarningMessage"]);}
                                    @if (!string.IsNullOrEmpty(confirmMessage))
                                    {
                                        <div class="alert alert-success alert-dismissable" id="divSuccessMessage">
                                            <input type="hidden" id="messagealert" value="@confirmMessage" />
                                            @confirmMessage
                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                        </div>
                                    }
                                    else if (!string.IsNullOrEmpty(warningMessage))
                                    {
                                        <div class="alert alert-warning alert-dismissable" id="divSuccessMessage">
                                            <input type="hidden" id="messagealert" value="@warningMessage" />
                                            @warningMessage
                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                        </div>
                                    }
                                    else
                                    {
                                        <input type="hidden" id="messagealert" value="0" />
                                    }
                                        <div class="card p-3">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="example-select">Training Institute Name:</label>
                                                        @Html.HiddenFor(m => m.Feedback_Id, new { @class = "form-control", @id = "Feedback_Id" })
                                                        @Html.DropDownListFor(x => x.Tr_Institute_Id, (IEnumerable<SelectListItem>)ViewBag.traininginstitute, new { @class = "form-control", @id = "traininginstitute", @Onchange = "BindType()" })
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="example-select">Training Programme Name:</label>
                                                        @Html.DropDownListFor(x => x.Traing_Type_Id, (IEnumerable<SelectListItem>)ViewBag.trainingType, new { @class = "form-control", @id = "trainingType" })

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="example-select">From Date:</label>
                                                        @Html.TextBoxFor(x => x.From_Date, new { @class = "form-control",@type = "Date", @required = "true", @name = "From_Date", @id = "From_Date" })
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="example-select">To Date:</label>
                                                        @Html.TextBoxFor(x => x.To_Date, new { @class = "form-control", @type = "Date", @required = "true", @name = "From_Date", @id = "From_Date" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="example-select">Training was relevant to my needs:</label>
                                                        <select name="Tr_Relevant" id="Tr_Relevant" class="form-control " required>
                                                            <option value="0">Select</option>
                                                            <option value="Yes">Yes</option>
                                                            <option value="No">No</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="example-select">Length of training was sufficient:</label>
                                                        <select name="Tr_Length" id="Tr_Length" class="form-control " required>
                                                            <option value="0">Select</option>
                                                            <option value="Yes">Yes</option>
                                                            <option value="No">No</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="example-select">Instructions were clear and understandable:</label>
                                                        <select name="Tr_Inst_Clear" id="Tr_Inst_Clear" class="form-control " required>
                                                            <option value="0">Select</option>
                                                            <option value="Yes">Yes</option>
                                                            <option value="No">No</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="example-select">The Trainer and/ or Training was effective:</label>
                                                        <select name="Trainer_Effective" id="Trainer_Effective" class="form-control " required>
                                                            <option value="0">Select</option>
                                                            <option value="Yes">Yes</option>
                                                            <option value="No">No</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="example-select">Training met my expectations:</label>
                                                        <select name="Tr_Expectation" id="Tr_Expectation" class="form-control " required>
                                                            <option value="0">Select</option>
                                                            <option value="Yes">Yes</option>
                                                            <option value="No">No</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="example-select">The overall quality of the training:</label>
                                                        <select name="Tr_Quality" id="Tr_Quality" class="form-control " required>
                                                            <option value="0">Select</option>
                                                            <option value="Good">Good</option>
                                                            <option value="Very Good">Very Good</option>
                                                            <option value="Excellent">Excellent</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="example-select">The content of the training impact on daily work:</label>
                                                        @Html.TextAreaFor(x => x.Tr_Daily_Work, new { @class = "form-control", @name = "Tr_Daily_Work", @id = "Tr_Daily_Work" })
                                                    </div>
                                                </div>
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="form-label" for="example-select">The field where we can implement for development process:</label>
                                                        @Html.TextAreaFor(x => x.Imp_Dev_Process, new { @class = "form-control", @name = "Imp_Dev_Process", @id = "Imp_Dev_Process" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-md-12">
                                                    <div class="form-group">
                                                        <label class="form-label" for="example-select">Explain anything about the training:</label>
                                                        @Html.TextAreaFor(x => x.Explain_Training, new { @class = "form-control", @name = "Explain_Training", @id = "Explain_Training" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mt-4">
                                                <div class="col-md-12">
                                                    <button type="button" class="btn btn-warning waves-effect waves-themed" style="float:right;" onclick="location.reload()">Cancel</button>
                                                    <button type="submit" id="button" class="btn btn-primary waves-effect waves-themed" style="float:right;margin-right:12px;">Submit</button>
                                                </div>
                                            </div>
                                        </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
