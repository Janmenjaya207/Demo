<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">

            <div class="panel-hdr">
                <h2>
                    User Type Details <span class="fw-300"><i>List</i></span>
                </h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <!-- datatable start -->
                    <div class="table-responsive">
                        <table id="example2" class="table table-striped table-bordered">
                            <thead class="bg-info-700">
                                <tr>
                                    <th>Sl. No</th>
                                    <th>User Type</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{ int count = 0;}
                                @if (ViewBag.data != null)
                                {
                                    foreach (var iteam in ViewBag.data)
                                    {
                                        count = count + 1;
                                        <tr>
                                            <td>@count</td>
                                            <td class="sorting_1">@iteam.UserTypeName</td>
                                            <td>
                                                <div class="list-icons">
                                                    <div class="dropdown">
                                                        <a href="#" class="list-icons-item" data-toggle="dropdown">
                                                            <i class="icon-menu9"></i>
                                                        </a>
                                                        <div class="select">
                                                            <a href="#" onclick="Edit(@iteam.UserTypeId)" class="btn btn-outline-primary waves-effect waves-light m-1 btn2"><i class="fal fa-edit"></i> Edit</a>
                                                            <a href="~/Home/DeleteUser_Type/@iteam.UserTypeId" onclick="return confirm('Are you sure want to delete this record?')" class="btn btn-outline-primary waves-effect waves-light m-1 btn2"><i class="fal fa-trash"></i> Delete</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>

                        </table>
                    </div>
                    <!-- datatable end -->
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    function Edit(id) {
        debugger;
        $.ajax({
            type: "POST",
            url: "/Home/EditUser_Type",
            data: { id: id },
            dataType: "json",
            success: function (data) {
                debugger;
                $("#button").text("Update");
                $("#UserTypeId").val(data.UserTypeId);
                $("#User_Type").val(data.UserTypeName);
            }
        });
    }
</script>
<script type="text/javascript">
    $("#button").click(function () {
        debugger;
        var count = 0;
        var User_Type = $("#User_Type").val();

        if (User_Type == "") {
            $('#User_Type').next("label").remove();
            $('#User_Type').after('<label class="error mt-2 text-danger1 ">Please Enter User Type</label>');
            $("#User_Type").focus();
            count = 1;
            return false;
        }
        else {
            $('#User_Type').next("label").remove();
        }
    });
</script>
<script type="text/javascript">

    function lettersOnly(input) {
        var regex = /[^a-z+0-9+.+()+:+,]/gi;
        input.value = input.value.replace(regex, "");
    }
</script>

